{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"],
			"*": [""]
		},
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"strict": true
	},
	"include": [
		"*.config.js",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"./getContentfulEnvironment.js"
	],
	"exclude": ["node_modules"]
}
