{
	"extends": "@tsconfig/next/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src/",
		"paths": {
			"@/*": ["*"],
			"*": [""]
		},
		"strict": true,
		"importsNotUsedAsValues": "error",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
	"exclude": ["node_modules/", ".next/", "src/@types/generated"]
}
