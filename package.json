{
	"name": "andrisborbas-com",
	"private": true,
	"scripts": {
		"build": "next build",
		"build:analyze": "cross-env ANALYZE=true npm run build",
		"clean": "git clean --force -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
		"dev": "next dev",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write",
		"lint": "run-p lint:*",
		"lint:eslint": "eslint --ext .js,.ts,.tsx --ignore-path ./.gitignore .",
		"lint:prettier": "prettier --check --ignore-path ./.gitignore .",
		"lint:typescript": "tsc",
		"prepare": "husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks",
		"start": "next start",
		"cms-typegen": "contentful-typescript-codegen --output src/@types/generated/contentful.d.ts"
	},
	"lint-staged": {
		"*": "prettier --write --ignore-unknown",
		"*.{js,ts,tsx}": "eslint --fix"
	},
	"dependencies": {
		"@chakra-ui/react": "^1.6.0",
		"@emotion/react": "^11.1.5",
		"@emotion/styled": "^11.3.0",
		"@next/bundle-analyzer": "^10.1.3",
		"contentful": "^8.3.1",
		"framer-motion": "^4.1.10",
		"next": "^11.1.1",
		"next-compose-plugins": "^2.2.1",
		"next-mdx-remote": "^2.1.4",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@contentful/rich-text-types": "^14.1.2",
		"@next/eslint-plugin-next": "^10.1.3",
		"@types/node": "^15.0.1",
		"@types/react": "^17.0.4",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"contentful-management": "^7.17.1",
		"contentful-typescript-codegen": "^3.2.2",
		"cross-env": "^7.0.3",
		"dotenv": "^8.2.0",
		"eslint": "^7.25.0",
		"eslint-config-airbnb-typescript": "^12.3.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-etc": "^1.4.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-etc": "^1.0.6",
		"eslint-plugin-react-hooks": "^4.2.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"shx": "^0.3.3",
		"typescript": "^4.2.4"
	}
}
